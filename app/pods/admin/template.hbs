<section class="admin">
  <div class="adminContent">

    <h1>🕵🏻‍♀️ Secret Admin Page 🕵🏻</h1>

    <div class="admin-sign-in">
      <form>
        {{input placeholder="Username" value=adminUsername}}
        {{input type="password" placeholder="Password" value=adminPassword}}
        <input type="submit" name="" value="Submit" {{action 'adminAccess'}}>
      </form>
      <span class="try-again">{{tryAgain}}</span>
    </div>

    {{#unless displayTable}}
      <table>
        <tr>
          <th>User's Name</th>
          <th>Attending?</th>
          <th>Ppl in Party</th>
          <th>Guest's Name</th>
          <th>User Diet Restrict.</th>
          <th>Guest Diet Restrict.</th>
          <th>Song Request</th>
          <th>Comments</th>
        </tr>
        {{#each model as |rsvp|}}
        <tr class=" tableRows">
          <td>{{rsvp.userName}}</td>
          <td>{{if rsvp.willAttend 'Yes' 'No'}}</td>
          <td>{{if rsvp.numPeople '2' '1'}}</td>
          <td>{{rsvp.guestName}}</td>
          <td>{{rsvp.userDietary}}</td>
          <td>{{rsvp.guestDietary}}</td>
          <td>{{rsvp.dance}}</td>
          <td>{{rsvp.comments}}</td>
        </tr>
        {{/each}}
      </table>
    {{/unless}}
  </div> <!-- /.adminContent -->
</section>
